	<jee:jndi-lookup id="dataSource" jndi-name="java:comp/env/jdbc/mysqldb" 
		resource-ref="true" lookup-on-startup="true" />

	<!-- bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource" depends-on="embeddedMysqlManager">
		<property name="url"
			value="jdbc:mysql:mxj://localhost:3336/pharma_db?server.basedir=/home/sree/Java/apache-tomcat-7.0.26/bin/pharma_db" />
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="username" value="root" />
		<property name="password" value="" />

	</bean-->

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<!-- property name="persistenceUnitName" value="sree" / -->
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<property name="generateDdl" value="true" />
				<property name="showSql" value="true" />
				<property name="databasePlatform" value="com.sree.mysqlDialect.MySql5Fix" />
				<!-- property name="databasePlatform" value="org.hibernate.dialect.PostgreSQLDialect" 
					/ -->
			</bean>
		</property>
	</bean>

	<!-- Use @Transactional annotation on methods -->
	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

</beans>